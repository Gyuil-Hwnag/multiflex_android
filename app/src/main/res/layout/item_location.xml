<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/login_edit_shape"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

<!--    "branchName": "대전서구점",-->
<!--    "branchAddress": "대전 서구 문정로 77 로데오타운 5층 메가박스 대전점",-->
<!--    "branchTelecom": 3001,-->
<!--    "locationIdx": 3,-->
<!--    "locationName": "대전",-->
<!--    "idx": 7-->
    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="지역이름"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:id="@+id/locationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:text="대전"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locationName"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="지점이름"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:id="@+id/branchName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt2"
        app:layout_constraintLeft_toRightOf="@id/locationName"
        android:textSize="15dp"
        android:text="대전서구점"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/branchName"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="지점 주소"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:id="@+id/branchAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt3"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:text="대전 서구 문정로 77 로데오타운 5층 메가박스 대전점"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:id="@+id/txt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/branchAddress"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="전화번호"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:id="@+id/branchTelecom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt4"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:text="3001"
        android:textColor="@color/black">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>