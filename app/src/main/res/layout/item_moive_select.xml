<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/img_categery_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/img_categery"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/movie1"
            android:background="@color/black"
            android:scaleType="fitCenter">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_category"
        app:layout_constraintLeft_toRightOf="@id/img_categery_main"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="180dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:text="겟 아웃"
        android:textSize="18dp">
    </TextView>

    <TextView
        android:id="@+id/movie_star"
        app:layout_constraintLeft_toRightOf="@id/img_categery_main"
        app:layout_constraintTop_toBottomOf="@id/txt_category"
        android:layout_marginTop="5dp"
        android:textColor="@color/register_login_blue"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:text="평점 : 4.5"
        android:textSize="15dp">
    </TextView>

    <TextView
        android:id="@+id/movie_summary"
        app:layout_constraintLeft_toRightOf="@id/img_categery_main"
        app:layout_constraintTop_toBottomOf="@id/movie_star"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_width="150dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:text="겟 아웃"
        android:textSize="15dp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>